<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#1E1E1E"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- GUILD NAME -->
        <TextView
            android:id="@+id/tv_item_guild_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guild Name"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- MEMBER COUNT -->
        <TextView
            android:id="@+id/tv_item_guild_members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Members: 0"
            android:textColor="#BBBBBB"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <!-- ACTION BUTTONS ROW -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/btn_item_guild_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="#FFFFFF"
                android:backgroundTint="#B00020"/>

            <View
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/btn_item_guild_reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reset Stats"
                android:textColor="#FFFFFF"
                android:backgroundTint="#455A64"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
