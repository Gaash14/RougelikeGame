<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Title Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#1E1E1E"
            android:padding="14dp"
            android:layout_marginBottom="14dp">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Roguelike Game"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Buttons Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#1E1E1E"
            android:padding="14dp">

            <!-- Container with limited width -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:maxWidth="520dp">

                <!-- START GAME (FULL WIDTH) -->
                <Button
                    android:id="@+id/startGameButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="â–¶ START GAME"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:background="@drawable/btn_game"
                    android:layout_marginBottom="10dp" />

                <!-- ROW 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <Button
                        android:id="@+id/leaderboardButton"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="Leaderboard"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/btn_primary" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/guildsButton"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="Guilds"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/btn_primary" />
                </LinearLayout>

                <!-- ROW 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <Button
                        android:id="@+id/profileButton"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="Profile"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/btn_primary" />

                    <View
                        android:layout_width="10dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/achievementsButton"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="ðŸ† Achievements"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/btn_primary" />
                </LinearLayout>

                <!-- ADMIN PANEL (HIDDEN BY DEFAULT) -->
                <Button
                    android:id="@+id/adminPanelButton"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Admin Panel"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_primary"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp" />

                <!-- SIGN OUT ONLY -->
                <Button
                    android:id="@+id/signOutButton"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Sign Out"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/btn_primary" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
