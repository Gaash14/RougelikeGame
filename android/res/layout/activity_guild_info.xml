<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#121212">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- TITLE CARD -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#1E1E1E"
            android:padding="14dp"
            android:layout_marginBottom="14dp">

            <TextView
                android:id="@+id/txtGuildName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guild"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- GUILD INFO CARD -->
        <LinearLayout
            android:id="@+id/layoutGuildInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1E1E1E"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="520dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtMemberCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Members: 0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtEnemiesKilled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enemies Killed: 0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtWins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wins: 0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtAttempts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attempts: 0"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- NO GUILD CARD -->
        <LinearLayout
            android:id="@+id/layoutNoGuild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1E1E1E"
            android:padding="14dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="520dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You are not in a guild"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnCreateGuild"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Create Guild"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:id="@+id/btnJoinGuild"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Join Guild" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
