<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profileScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="#1E1E1E">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:contentDescription="Profile picture"
                android:scaleType="centerCrop"
                android:background="#2A2A2A"
                android:padding="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player Name"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="#BBBBBB"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Update User -->
            <ImageButton
                android:id="@+id/btnUpdateUser"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Update user"
                android:tint="#FFFFFF" />
        </LinearLayout>

        <!-- (everything else stays exactly like your current XML) -->

        <!-- Two columns -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- LEFT COLUMN -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Runs / Wins / Win Rate -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#1E1E1E"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/txtRuns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Runs: 0"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtWinsLosses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wins: 0 | Losses: 0"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/txtWinRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Win Rate: 0%"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Streaks -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#1E1E1E"
                    android:padding="12dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txtCurrentStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Streak: 0"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtBestStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Streak: 0"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Bests -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#1E1E1E"
                    android:padding="12dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txtHighestWave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Highest Wave: 0"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtBestTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Time: â€”"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- RIGHT COLUMN -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- Kills / Pickups -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#1E1E1E"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/txtKills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enemies Killed: 0 (0.00 / run)"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txtPickups"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickups: 0 (0.00 / run)"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/txtCoins"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Coins: 0"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/btnOpenShop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SHOP"
                            android:textColor="#BBBBBB"
                            android:textSize="14sp"
                            android:paddingStart="8dp"
                            android:paddingEnd="0dp"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:clickable="true"
                            android:focusable="true" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Class Picks -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#1E1E1E"
                    android:padding="12dp"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txtRangedPicks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ranged: 0 (0%)"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txtMeleePicks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Melee: 0 (0%)"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
