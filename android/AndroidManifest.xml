<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:appCategory="game"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:isGame="true"
        android:label="@string/app_name"
        android:theme="@style/GdxTheme"
        tools:ignore="UnusedAttribute">

        <!-- LANDING ACTIVITY -->
        <activity
            android:name="com.example.rougelikegame.android.screens.LandingActivity"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize|screenLayout"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MAIN MENU -->
        <activity
            android:name="com.example.rougelikegame.android.screens.MainMenu"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- LIBGDX GAME -->
        <activity
            android:name="com.example.rougelikegame.android.screens.AndroidLauncher"
            android:configChanges="keyboard|keyboardHidden|navigation|orientation|screenSize|screenLayout"
            android:exported="false"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/GdxTheme" />

        <!-- LEADERBOARD -->
        <activity
            android:name="com.example.rougelikegame.android.screens.LeaderboardActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- LOGIN -->
        <activity
            android:name="com.example.rougelikegame.android.screens.LoginActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- REGISTER -->
        <activity
            android:name="com.example.rougelikegame.android.screens.RegisterActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- UPDATE USER -->
        <activity
            android:name="com.example.rougelikegame.android.screens.UpdateUserActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- CHOOSE DIFFICULTY -->
        <activity
            android:name="com.example.rougelikegame.android.screens.ChooseDifficultyActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- PROFILE -->
        <activity
            android:name="com.example.rougelikegame.android.screens.ProfileActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- ADMIN -->
        <activity
            android:name="com.example.rougelikegame.android.screens.AdminActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <!-- CREATE GUILD -->
        <activity
            android:name="com.example.rougelikegame.android.screens.CreateGuildActivity"
            android:exported="true"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

    </application>
</manifest>
